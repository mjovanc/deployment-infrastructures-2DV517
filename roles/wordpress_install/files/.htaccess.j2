# BEGIN WordPress

RewriteRule ^(wp-content/.*)$ http://{{ hostvars['nginx_wpuploads']['public_host'] }}/$1 [R=301,QSA,L]

RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]

# END WordPress