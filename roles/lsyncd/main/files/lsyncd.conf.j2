settings {
logfile = "/var/log/lsyncd/lsyncd.log",
statusFile = "/var/log/lsyncd/lsyncd-status.log",
statusInterval = 20
}
sync {
default.rsync,
source="/var/www/{{ hostvars['nginx']['ansible_host'] }}/wordpress/wp-content/uploads/",
target="{{ hostvars['nginx_wpuploads']['ansible_host'] }}:/usr/share/nginx/your-domain2.com/wp-content/uploads/", //slave source
rsync = {
compress = true,
acls = true,
verbose = true,
rsh = "/usr/bin/ssh -p 22 -o StrictHostKeyChecking=no" }
}